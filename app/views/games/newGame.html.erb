<div class="container">
  <h1>Welcome to the longest word game</h1>
  <div class="d-flex flex-row">
    <% @letters.each do |letter| %>
      <p class="m-4 btn-primary btn"><%= letter %></p>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false" class="col-6 d-flex flex-row">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play" class="btn btn-success">
  </form>
</div>
